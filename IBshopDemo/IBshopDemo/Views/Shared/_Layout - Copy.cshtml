                                <li class="w-100">
                                    <a asp-action="Create" asp-controller="IncomeCenters" class="nav-link px-0"> <span class="d-none d-sm-inline">IncomeCenters</span></a>
                                </li>
                                <li class="w-100">
                                    <a asp-action="Create" asp-controller="Kpicrms" class="nav-link px-0"> <span class="d-none d-sm-inline">Kpicrms</span></a>
                                </li>

                                <li class="w-100">
                                    <a asp-action="Create" asp-controller="Kpidevelopments" class="nav-link px-0"> <span class="d-none d-sm-inline">Kpidevelopments</span></a>
                                </li>
                                <li class="w-100">
                                    <a asp-action="Create" asp-controller="Kpifinancials" class="nav-link px-0"> <span class="d-none d-sm-inline">Kpifinancials</span></a>
                                </li>
                                <li class="w-100">
