@model IBshopDemo.Models.FixIncomeProperty

@{
    ViewData["Title"] = "Create";
}

<style>
    div.card {
        border-bottom: 3px solid green;
        border-top: 3px solid green;
        border-radius: 1.25rem !important;
    }

    .btn-create {
        font-size: 15px;
    }

</style>
<div class="row  p-3">
    <div class="row p-3">
        <h1>Create</h1>
        <h4>FixIncomeProperty</h4>
    </div>
    <hr />
    <div class="col-1"></div>
    <div class="col-10">
        <div class="card px-4 mt-3 shadow bg-white " style="direction:rtl">
            <div class="card-body  pt-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
                    <div class="row">
                        <div class="form-group col-6 mt-1">
                            <label asp-for="FixIncomeId" class="form-label mt-3"></label>
                            <input asp-for="FixIncomeId" class="form-control mt-1 shadow-sm" />
