						</div>
						<div class="form-group col-6 mt-1">
							<label asp-for="OtdecLegRe" class="form-label mt-3"></label>
							<input asp-for="OtdecLegRe" class="form-control mt-1 shadow-sm" />
							<span asp-validation-for="OtdecLegRe" class="text-danger"></span>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-6 mt-1">
							<label asp-for="RvwAccConflicts" class="form-label mt-3"></label>
							<input asp-for="RvwAccConflicts" class="form-control mt-1 shadow-sm" />
							<span asp-validation-for="RvwAccConflicts" class="text-danger"></span>
						</div>
						<div class="form-group col-6 mt-1">
							<label asp-for="RvwInvConflicts" class="form-label mt-3"></label>
							<input asp-for="RvwInvConflicts" class="form-control mt-1 shadow-sm" />
							<span asp-validation-for="RvwInvConflicts" class="text-danger"></span>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-6 mt-1">
							<label asp-for="DevPlnBudPer" class="form-label mt-3"></label>
							<input asp-for="DevPlnBudPer" class="form-control mt-1 shadow-sm" />
							<span asp-validation-for="DevPlnBudPer" class="text-danger"></span>
						</div>
						<div class="form-group col-6 mt-1">
							<label asp-for="IncBudMeetPer" class="form-label mt-3"></label>
							<input asp-for="IncBudMeetPer" class="form-control mt-1 shadow-sm" />
							<span asp-validation-for="IncBudMeetPer" class="text-danger"></span>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-6 mt-1">
							<label asp-for="DemistakeFin" class="form-label mt-3"></label>
							<input asp-for="DemistakeFin" class="form-control mt-1 shadow-sm" />
