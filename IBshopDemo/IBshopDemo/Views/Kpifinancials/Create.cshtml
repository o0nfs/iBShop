						</div>
						<div class="form-group col-6 mt-1">
							<label asp-for="AcrFinRepPer" class="form-label mt-3"></label>
							<input asp-for="AcrFinRepPer" class="form-control mt-1 shadow-sm" />
							<span asp-validation-for="AcrFinRepPer" class="text-danger"></span>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-6 mt-1">
							<label asp-for="Cnt" class="form-label mt-3"></label>
							<input asp-for="Cnt" class="form-control mt-1 shadow-sm" />
							<span asp-validation-for="Cnt" class="text-danger"></span>
