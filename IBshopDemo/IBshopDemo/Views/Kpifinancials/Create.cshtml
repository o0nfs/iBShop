						<div class="form-group col-6 mt-1">
							<label asp-for="BillIssueAvgTime" class="form-label mt-3"></label>
							<input asp-for="BillIssueAvgTime" class="form-control mt-1 shadow-sm" />
							<span asp-validation-for="BillIssueAvgTime" class="text-danger"></span>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-6 mt-1">
							<label asp-for="CnrctrInvoicesMatch" class="form-label mt-3"></label>
							<input asp-for="CnrctrInvoicesMatch" class="form-control mt-1 shadow-sm" />
