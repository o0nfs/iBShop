<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
@model IBshopDemo.Models.OperationKpi

@{
    ViewData["Title"] = "Create";
}


<style>
    div.card {
        border-bottom: 3px solid green;
        border-top: 3px solid green;
        border-radius: 1.25rem !important;
    }
    .btn-create{

        font-size:15px;
    }

</style>
<div class="row  p-3" >

    <div class="row p-3">
        <h1 class="mb-5">ثبت گزارش</h1>

        <h4 class="mb-5 text-dark">شاخص‌های کلیدی عملکرد</h4>
    </div>
   
    <hr />
    <div class="col-1"></div>
    <div class="col-10 ">
        <div class="card px-4 mt-3 shadow bg-white " style="direction:rtl">
            <div class="card-body  pt-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
                    <div class="row">
                        <div class="form-group col-6 mt-1">
                            <label asp-for="OperationKpicode" class="form-label mt-3"></label>
                            <input asp-for="OperationKpicode" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="OperationKpicode" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 mt-1">
                            <label asp-for="Piapp" class=" form-label mt-3" >بهبود رویه در سامانه ی  ibShop</label>
                            <input asp-for="Piapp" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="Piapp" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6 mt-1">
                            <label asp-for="ErrApp" class="form-label mt-3"></label>
                            <input asp-for="ErrApp" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="ErrApp" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 mt-1">
                            <label asp-for="AppDev" class="form-label mt-3"></label>
                            <input asp-for="AppDev" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="AppDev" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">

                        <div class="form-group col-6 mt-1">
                            <label asp-for="Answeringspeed" class="form-label mt-3"></label>
                            <input asp-for="Answeringspeed" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="Answeringspeed" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 mt-1">
                            <label asp-for="IbCardAutAvgTime" class="form-label mt-3"></label>
                            <input asp-for="IbCardAutAvgTime" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="IbCardAutAvgTime" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-6 mt-1">

                            <label asp-for="SejAutAvgTime" class="form-label mt-3"></label>
                            <input asp-for="SejAutAvgTime" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="SejAutAvgTime" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 mt-1">
                            <label asp-for="PayToCusAvgTime" class="form-label mt-3"></label>
                            <input asp-for="PayToCusAvgTime" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="PayToCusAvgTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6 mt-1">
                            <label asp-for="CusAutAsset" class="form-label mt-3"></label>
                            <input asp-for="CusAutAsset" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="CusAutAsset" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 mt-1">
                            <label asp-for="Cus" class="form-label mt-3"></label>
                            <input asp-for="Cus" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="Cus" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">

                        <div class="form-group col-6 mt-1">
                            <label asp-for="SucOprRate" class="form-label mt-3"></label>
                            <input asp-for="SucOprRate" class="form-control mt-1 shadow-sm" />
                            <span asp-validation-for="SucOprRate" class="text-danger"></span>
                        </div>
                        
                    </div>


                    <div class="row m-5 pb-5">
                       
                      
                            
                                <div class="form-group">
                                    <a asp-action="Index" class="mt-4 me-3 float-end ">بازگشت به لیست</a>
                                    <input type="submit" value="ثبت" class=" py-3 px-5 float-start btn btn-outline-success me-3 btn-create" />
                                </div>
                           


                      
                    </div>






                </form>
            </div>
        </div>




        
    </div>
    <div class="col-1"></div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
